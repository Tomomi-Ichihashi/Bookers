<h1>Editing Book</h1>
    <%= form_with model:@book,local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>

<% if @book.errors.any? %>
<div id = "error_explanation" class = "alert alert_danger">
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<span>
<%= link_to 'Show',  book_path(@book.id) %>
</span>
<span>
<%= link_to 'Back', index_path %>
</span>


 
