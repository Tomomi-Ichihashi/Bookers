<div class ="index-message">
    <% if flash[:notice] %>
        <p class = "notice">
            <%= flash[:notice] %>
        </p>
    <% end %>
</div>

<div class = "index">
    <h2>Books</h2>
    <div class ="table1"role = "grid" aria-readonly = "ture">
        <table class = "t1" role = "presentation">
            <tr role = "row">
                <th role= "columnheader">Title</th>
                <th role= "columnheader">Body</th>
            </tr>
        </table>

        <table class = "t2">
        <% @books.each do |book| %>
            <tr role = "row">
                <td role = "gridcell"><%= book.title %></td>
                <td role = "gridcell"><%= book.body %></td>
                <td role = "gridcell"><%= link_to 'Show', book_path(book.id) %></td>
                <td role = "gridcell"><%= link_to 'Edit', edit_book_path(book.id) %></td>
                <td role = "gridcell"><%= link_to 'Destroy', book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></td>
            </tr>
        <% end %>
        </table>
    </div>
</div>

<div class = "new">
    <h3>New book</h3>
    <%= form_with model:@book,local:true do |f| %>
    <p>Title</p>
    <span><%= f.text_field :title %></span>
    <p>Body</p>
    <span><%= f.text_area :body %></span>
    <span><%= f.submit 'Create Book' %></span>
    <% end %>
</div>

<div class = "new-alert">
    <% if @book.errors.any? %>
    <div id = "error_explanation" class = "alert alert_danger">
        <h1>error</h1>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>
</div>
