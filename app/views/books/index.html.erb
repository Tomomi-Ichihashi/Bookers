<div class = "index">
    <h1>Books</h1>
    <% @books.each do |book| %>
    <p>Title</p>
    <span><%= book.title %></span>
    <p>Body</p>
    <span><%= book.body %></span>
    <span><%= link_to 'Show', show_path(book.id) %></span>
    <span><%= link_to 'Edit', edit_path(book.id) %></span>
    <span><%= link_to 'Destroy', destroy_path(book.id), method: :delet,"date-confirm" => "Are you sure?" %></span>
    <% end %>
</div>

<div class = "new">
    <h1>New book</h1>
    <%= form_with model:@book, url:'/books',local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
<% f.submit 'Create Book' %>
<% end %>
</div>
